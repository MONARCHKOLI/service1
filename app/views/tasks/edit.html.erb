<div>
<h1>Edit Tak</h1>

<%= form_with model: @task, method: :patch, url: user_task_path(@user, @task), local: true do |form| %>    <p>
    <div class="row">
    <div class="col-md-3">
      <div class="mb-2 row">
      <%= form.label :category ,{for:"floatingSelectGrid",class:"form-label"}%><br>
      <%= form.select :category ,["plumber","electrician"],{class:"form-control form-control-lg" ,id:"floatingSelectGrid" }%>
      </div>
    </div>
    <div class="col-md-3">
      <div class="mb-2 row">
      <%= form.label :status ,{for:"floatingSelectGrid",class:"form-label"}%><br>
      <%= form.select :status,["ACTIVE","DEACTIVE"],{class:"form-control form-control-lg" ,id:"floatingSelectGrid" }%>
      </div>
    </div>
    <div class="col-md-3">
      <div class="mb-2 row">
      <%= form.label :description ,{for:"exampleFormControlTextarea1" ,class:"form-label"}%><br>
      <%= form.text_area :description, {class:"form-control" ,id:"exampleFormControlTextarea1" }%>
      </div>
    </div>
    <div class="col-md-3">
      <div class="mb-2 row">
      <%= form.label :amount,{class:"form-label"} %><br>
      <%= form.text_field :amount %><br>
      </div>
    </div>
      <%= form.submit %><br>
    </div>  
  <% end %>

</div>
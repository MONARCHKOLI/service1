  <style>
    table,
    th,
    td {
        border: 1px solid black;
        border-collapse: collapse;
    }
    /* setting the text-align property to center*/
    td,th {
        padding: 5px;
        text-align: center;
    }
</style>
  <body>
    <%= yield %>
  </body>
</html>

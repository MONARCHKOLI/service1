<div class="container">
    <h1>Please Sign up to register the task to your name .....</h1>

        <%= form_with model: [:user, :task, @worker]  do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name %><br>
            <%= f.label :mobileno %>
            <%= f.text_field :mobileno %><br>
            <%= f.label :address %>
            <%= f.text_area :address %><br>
            <%= f.label :email %>
            <%= f.text_field :email %><br>
            <%= f.label :age %>
            <%= f.text_field :age %><br>
            
            <%= f.submit "Submit!!"%>
        <% end %>
</div>
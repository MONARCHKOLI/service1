    </div>
  </div>
    
    <% @user.errors.full_messages_for(:email).each do |message| %>
      <div><%= message %></div>
    <% end %>
    <hr>
    <% if @user.id?%>
    <div class="mb-3 row">
    <%= f.label :new_password,{class:"col col-form-label"} %>
    <div class="col-sm-9">
    <%= f.password_field :password ,{class:"form-control form-control-lg"}%>
    </div>
  </div>
  <%else%>
  <div class="mb-3 row">
  <%= f.label :password,{class:"col col-form-label"} %>
  <div class="col-sm-9">
  <%= f.password_field :password ,{class:"form-control form-control-lg"}%>
  </div>
</div>
  <%end%>
    
    <% @user.errors.full_messages_for(:password).each do |message| %>
      <div><%= message %></div>
    <% end %>
    <hr>
    <div class="mb-3 row">
    <%= f.submit "Submit!!"%><hr>
    </div>
<% end %>
    <div class="mb-3 row">
    <%= f.label :mobile_no,{class:"col col-form-label"} %>
    <div class="col-sm-10">
    <%= f.text_field :mobileno ,{class:"form-control form-control-lg"}%>
    </div>
  </div>
    
    <% @user.errors.full_messages_for(:mobileno).each do |message| %>
      <div><%= message %></div>
    <% end %>
    <hr>
    <div class="mb-3 row">
    <%= f.label :address,{class:"col col-form-label"} %>
    <div class="col-sm-10">
    <%= f.text_area :address,{class:"form-control form-control-lg"} %>
    </div>
  </div>
    

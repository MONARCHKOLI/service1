    <hr>
    <div class="mb-3 row">
    <%= f.label :state,{class:"col col-form-label"} %>
    <div class="col-sm-10">
    <%= f.text_field :state ,{class:"form-control form-control-lg"}%>
    </div>
  </div>
    
    <% @user.errors.full_messages_for(:state).each do |message| %>
      <div><%= message %></div>

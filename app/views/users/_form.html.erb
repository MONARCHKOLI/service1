    </div>
  </div>
    
    <% @user.errors.full_messages_for(:city).each do |message| %>
      <div><%= message %></div>
    <% end %>
    <hr>
    <div class="mb-3 row">
    <%= f.label :pincode,{class:"col col-form-label"} %>
    <div class="col-sm-10">
    <%= f.text_field :pincode,{class:"form-control form-control-lg"} %>
    </div>
  </div>
    
    <% @user.errors.full_messages_for(:pincode).each do |message| %>

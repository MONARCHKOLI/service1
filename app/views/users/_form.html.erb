

<%= form_with model: @user do |f| %>
  <div class="mb-3 row">
    <%= f.label :name,{class:"col col-form-label"}%>
    <div class="col-sm-10">
    <%= f.text_field :name ,{class:"form-control form-control-lg"}%>
    </div>
  </div>
    
    <% @user.errors.full_messages_for(:name).each do |message| %>
        <div><%= message %></div>
    <% end %>
